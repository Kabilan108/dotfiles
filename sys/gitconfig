[user]
  name = Tony Okeke
  email = tonykabilanokeke@gmail.com
  username = kabilan108

[init]
  defaultBranch = main

[core]
  editor = nvim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  pager = delta

[color]
  ui = auto

[color "status"]
  added = green bold
  changed = yellow bold
  untracked = red bold

[diff]
  colorMoved = default
  dark = true

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  line-numbers = true
  syntax-theme = base16
  file-style = bold yellow
  hunk-header-style = omit
  zero-style = dim syntax
  plus-style = syntax "#324430"
  minus-style = syntax "#492a32"
  whitespace-error-style = 22 reverse # Highlight whitespace errors
  features = decorations       # Enable additional features
  inspect-raw-lines = true     # Better handling of moved blocks
  commit-decoration-style = bold yellow box ul
  file-decoration-style = none
  hunk-header-decoration-style = cyan box ul

[merge]
    conflictstyle = zdiff3

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[alias]
  a = add --all

  b = branch

  c = commit

  ca = commit --append
  cl = clone

  co = checkout
  com = checkout master
  cob = checkout -b

  d = diff
  ds = diff --staged

  f = fetch
  fo = fetch origin
  fu = fetch upstream

  l = log
  lo = log --oneline
  lg = log --oneline --graph --decorate

  m = merge
  ma = merge --abort
  mc = merge --continue

  ps = push
  psu = push -u
  pst = push --tags

  pl = pull

  ra = remote add
  rr = remote rm
  rgu = remote get-url
  rsu = remote set-url

  s = status
  ss = status -s -b

  st = stash
  stl = stash list
  stp = stash pop

  t = tag
  td = tag -d
